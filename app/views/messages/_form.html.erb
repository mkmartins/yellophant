<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Make a difference on someone's life (:
    <%#= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    Your email:
    <%#= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    Can we make your message public?
    <%#= f.label :share %><br />
    <%= f.check_box :share %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
